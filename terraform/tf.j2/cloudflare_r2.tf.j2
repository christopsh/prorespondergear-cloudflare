resource "cloudflare_r2_bucket" "my_website_assets" {
  account_id = var.cloudflare_account_id
  name       = var.r2_bucket_name
  location   = var.r2_location
}

resource "cloudflare_r2_bucket" "backups" {
  account_id = var.cloudflare_account_id
  name       = var.r2_backup_bucket
  location   = var.r2_location
}
